<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="@dimen/dp_5"
    android:background="@drawable/custom_ripple_effect"
    >
    <ImageView
        android:id="@+id/nyt_news_item_imageview"
        android:layout_width="@dimen/dp_100"
        android:layout_height="@dimen/dp_100"
        android:scaleType="centerInside"
        android:padding="@dimen/dp_5"
        android:src="@drawable/circle_image_bg"
        android:layout_centerVertical="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        />
    <TextView
        android:id="@+id/nyt_news_item_title_textView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/dp_5"
        android:layout_toRightOf="@+id/nyt_news_item_imageview"
        android:layout_toEndOf="@+id/nyt_news_item_imageview"
        android:layout_toLeftOf="@+id/nyt_news_item_arrow_imageview"
        android:layout_toStartOf="@+id/nyt_news_item_arrow_imageview"
        android:text="@string/lorem_ipsum"
        android:gravity="center_vertical"
        android:textColor="@android:color/black"
        android:maxLines="2"
        android:ellipsize="end"
        android:textSize="@dimen/dp_16"
        />

    <TextView
        android:id="@+id/nyt_news_item_subtitle_textView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/nyt_news_item_imageview"
        android:layout_toEndOf="@+id/nyt_news_item_imageview"
        android:layout_toLeftOf="@+id/nyt_news_item_arrow_imageview"
        android:layout_toStartOf="@+id/nyt_news_item_arrow_imageview"
        android:layout_below="@+id/nyt_news_item_title_textView"
        android:text="@string/lorem_ipsum"
        android:gravity="center_vertical"
        android:padding="@dimen/dp_5"
        android:maxLines="2"
        android:ellipsize="end"
        android:textSize="@dimen/dp_14"
        />

    <TextView
        android:id="@+id/nyt_news_item_date_textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:drawableLeft="@drawable/ic_date_range_black_24dp"
        android:layout_toLeftOf="@+id/nyt_news_item_arrow_imageview"
        android:layout_toStartOf="@+id/nyt_news_item_arrow_imageview"
        android:layout_below="@+id/nyt_news_item_subtitle_textView"
        android:drawablePadding="@dimen/dp_5"
        android:text="@string/date"
        android:gravity="center_vertical"
        android:textSize="@dimen/dp_12"
        />



    <ImageView
        android:id="@+id/nyt_news_item_arrow_imageview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:scaleType="fitXY"
        android:padding="@dimen/dp_5"
        android:src="@drawable/ic_keyboard_arrow_right_black_24dp"
        android:layout_centerVertical="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        />

</RelativeLayout>