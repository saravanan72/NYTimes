<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/dp_5"
    android:padding="@dimen/dp_5"
    >
    <View
        android:id="@+id/nyt_news_item_view"
        android:layout_width="@dimen/dp_80"
        android:layout_height="@dimen/dp_80"
        android:scaleType="centerInside"
        android:padding="@dimen/dp_5"
        android:background="@drawable/circle_image_bg"
        android:layout_centerVertical="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        />
    <View
        android:id="@+id/nyt_news_item_title_View"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_25"
        android:layout_marginLeft="@dimen/dp_5"
        android:layout_marginRight="@dimen/dp_5"
        android:layout_toRightOf="@+id/nyt_news_item_view"
        android:layout_toEndOf="@+id/nyt_news_item_view"
        android:layout_toLeftOf="@+id/nyt_news_item_arrow_view"
        android:layout_toStartOf="@+id/nyt_news_item_arrow_view"
        android:gravity="center_vertical"
        android:textColor="@android:color/black"
        android:maxLines="2"
        android:ellipsize="end"
        android:textSize="@dimen/dp_16"
        android:background="@color/gray"
        />

    <View
        android:id="@+id/nyt_news_item_subtitle_View"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_25"
        android:layout_marginTop="@dimen/dp_5"
        android:layout_marginLeft="@dimen/dp_5"
        android:layout_marginRight="@dimen/dp_5"
        android:layout_toRightOf="@+id/nyt_news_item_view"
        android:layout_toEndOf="@+id/nyt_news_item_view"
        android:layout_toLeftOf="@+id/nyt_news_item_arrow_view"
        android:layout_toStartOf="@+id/nyt_news_item_arrow_view"
        android:layout_below="@+id/nyt_news_item_title_View"
        android:gravity="center_vertical"
        android:maxLines="2"
        android:ellipsize="end"
        android:textSize="@dimen/dp_14"
        android:background="@color/gray"
        />

    <View
        android:id="@+id/nyt_news_item_date_View"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/dp_25"
        android:layout_marginTop="@dimen/dp_5"
        android:layout_marginLeft="@dimen/dp_5"
        android:layout_marginRight="@dimen/dp_5"
        android:layout_below="@+id/nyt_news_item_subtitle_View"
        android:layout_toRightOf="@+id/nyt_news_item_view"
        android:layout_toEndOf="@+id/nyt_news_item_view"
        android:layout_toLeftOf="@+id/nyt_news_item_arrow_view"
        android:layout_toStartOf="@+id/nyt_news_item_arrow_view"
        android:drawablePadding="@dimen/dp_5"
        android:gravity="center_vertical"
        android:textSize="@dimen/dp_12"
        android:background="@color/gray"
        />



    <View
        android:id="@+id/nyt_news_item_arrow_view"
        android:layout_width="@dimen/dp_30"
        android:layout_height="@dimen/dp_30"
        android:scaleType="fitXY"
        android:layout_margin="@dimen/dp_5"
        android:background="@drawable/circle_image_bg"
        android:layout_centerVertical="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        />

</RelativeLayout>